#:import tr __main__.tr
#:import WipeTransition kivy.uix.screenmanager.WipeTransition
#:import SwapTransition kivy.uix.screenmanager.SwapTransition
#:import NoTransition kivy.uix.screenmanager.NoTransition


<OneLineScheduleListItem>:
    text: ""

    IconLeftWidget:
        icon: "view-list"


    IconRightWidget:
        icon: "dots-vertical"
        on_release: app.show_schedule_item_options(root)

<ThreeLineLessonListItem>:
    text: ""

    IconLeftWidget:
        icon: "book-open-page-variant"

    IconRightWidget:
        icon: "dots-vertical"
        on_release: app.show_lesson_item_options(root)

<ThreeLineHomeworkListItem>:
    text: ""

    IconLeftWidget:
        icon: "home-lightbulb"

    IconRightWidget:
        icon: "dots-vertical"
        on_release: app.show_homework_item_options(root)

<ScheduleLessonListRV>:
    data: root.data
    viewclass: 'ThreeLineLessonListItem'
    RecycleBoxLayout:
        default_size: None, dp(82)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<HomeworkListRV>:
    data: root.data
    viewclass: 'ThreeLineHomeworkListItem'
    RecycleBoxLayout:
        default_size: None, dp(82)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

ScreenManager:
    id: screen_manager
    transition: NoTransition()

    Screen:
        name: "start"
        on_pre_enter: app.on_screen_pre_enter(self)
        MDBoxLayout:
            id: start_screen_layout
            orientation: 'vertical'
            MDToolbar:
                id: start_top_toolbar
                title: "The Schedules"
                elevation: 8
                md_bg_color: app.theme_cls.primary_color
                right_action_items: [['cog', lambda x: app.open_settings()]]

            MDTabs:
                id: start_tabs
                on_tab_switch: app.on_start_tab_switch(*args)
                tab_indicator_anim: True
                tab_indicator_height: "4dp"
                elevation: 8

                Tab:
                    id: schedules_tab
                    text: tr._('Schedules')
                    ScrollView:
                        do_scroll_x: False
                        MDList:
                            id: schedule_list
                Tab:
                    id: homeworks_tab
                    text: tr._('Homeworks')
                    HomeworkListRV:
                        id: homework_list

        MDFloatingActionButton:
            icon: "plus"
#            opposite_colors: True
            elevation_normal: 8
            pos_hint: {"center_x": .9, "center_y": .1}
            size: dp(56), dp(56)
            on_release: app.on_start_add_button_release()

    Screen:
        name: "add_schedule"
        BoxLayout:
            id: add_schedule_layout
            orientation: 'vertical'
            MDToolbar:
                id: add_schedule_top_toolbar
                title: tr._("Add Schedule")
                elevation: 8
            ScrollView:
                do_scroll_x: False
                GridLayout:
                    padding: dp(30)
#                    spacing: dp(20)
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

                    TitleTextField:
                        id: add_schedule_title
                        hint_text: tr._('Title')
                        text_max: app.get_config_item('schedule_title_max_len')
                        fill_color: 0, 0, 0, .1
                        mode: 'fill'
                        helper_text_mode: "on_focus"
                        helper_text: tr._("maximum") + f' {app.get_config_item("schedule_title_max_len")} ' + tr._("chars length")

    Screen:
        name: "add_homework"

        BoxLayout:
            id: add_homework_layout
            orientation: 'vertical'
            MDToolbar:
                id: add_homework_top_toolbar
                title: "Select Date / Schedule / Lesson"
                elevation: 8

            ScrollView:
                MDBoxLayout:
                    orientation: "vertical"
                    padding: dp(48)
                    spacing: 10
                    size_hint_y: None
                    height: self.minimum_height

                    MDBoxLayout:
                        pos_hint: {"center_x": .5, "center_y": .5}
                        orientation: "vertical"

                        MDRoundFlatIconDateButton:
                            id: add_homework_date
                            icon: "calendar"
                            text: ""
                            pos_hint: {"center_x": .5}
                            spacing: dp(12)
                            font_name: app.get_app_font()
                            on_release: app.open_add_homework_datepicker()

#                    MDSeparator:

                    MDStackLayout:
                        id: add_homework_schedules_wrapper
                        adaptive_size: True
                        pos_hint: {"center_x": .5}
                        spacing: dp(12)
                        size_hint: (1, None)

#                    MDSeparator:

                    MDStackLayout:
                        id: add_homework_lessons_wrapper
                        adaptive_size: True
                        pos_hint: {"center_x": .5, "center_y": .5}
                        spacing: dp(12)
                        size_hint: (1, None)

#                    MDSeparator:

                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height

                        MDFillRoundFlatProceedButton:
                            id: add_homework_next_btn
                            text: "Next"
                            spacing: dp(12)
                            pos_hint: {"center_x": .5, "center_y": 1}
                            font_name: app.get_app_font()
                            on_release: app.open_add_homework()

    Screen:
        name: "add_lesson"
        BoxLayout:
            id: add_lesson_layout
            orientation: 'vertical'
            MDToolbar:
                id: add_lesson_top_toolbar
                title: "Add Lesson"
                elevation: 8
            ScrollView:
                do_scroll_x: False
                GridLayout:
                    id: add_lesson_grid_layout
                    padding: dp(30)
                    spacing: dp(20)
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

                    TitleTextField:
                        id: add_lesson_title
                        hint_text: 'Title'
                        text_max: app.get_config_item('lesson_title_max_len')
                        fill_color: 0, 0, 0, .1
                        mode: 'fill'
                        helper_text_mode: "on_focus"
                        helper_text: f'maximum {app.get_config_item("lesson_title_max_len")} chars length'

    Screen:
        name: "settings"
        BoxLayout:
            orientation: 'vertical'
            MDToolbar:
                id: settings_toolbar
                title: tr._('Settings')
                md_bg_color: app.theme_cls.primary_color
                elevation: 8
                left_action_items: [['arrow-left', lambda x: app.go_back()]]

            MDStackLayout:
                spacing: dp(10)
                padding: dp(10)

                MDLabel:
                    text: "Theme Color:"
                    size_hint_y: None
                    size_hint_x: 1
                    size: [0, 20]

                SettingsThemeColorToggleButton:
                    text: "Red"
                    setting_value: "Red"

                SettingsThemeColorToggleButton:
                    text: "Pink"
                    setting_value: "Pink"

                SettingsThemeColorToggleButton:
                    text: "Purple"
                    setting_value: "Purple"

                SettingsThemeColorToggleButton:
                    text: "Deep Purple"
                    setting_value: "DeepPurple"

                SettingsThemeColorToggleButton:
                    text: "Indigo"
                    setting_value: "Indigo"

                SettingsThemeColorToggleButton:
                    text: "Blue"
                    setting_value: "Blue"

                SettingsThemeColorToggleButton:
                    text: "LightBlue"
                    setting_value: "LightBlue"

                SettingsThemeColorToggleButton:
                    text: "Cyan"
                    setting_value: "Cyan"

                SettingsThemeColorToggleButton:
                    text: "Teal"
                    setting_value: "Teal"

                SettingsThemeColorToggleButton:
                    text: "Green"
                    setting_value: "Green"

                SettingsThemeColorToggleButton:
                    text: "Light Green"
                    setting_value: "LightGreen"

                SettingsThemeColorToggleButton:
                    text: "Lime"
                    setting_value: "Lime"

                SettingsThemeColorToggleButton:
                    text: "Yellow"
                    setting_value: "Yellow"

                SettingsThemeColorToggleButton:
                    text: "Amber"
                    setting_value: "Amber"

                SettingsThemeColorToggleButton:
                    text: "Orange"
                    setting_value: "Orange"

                SettingsThemeColorToggleButton:
                    text: "Deep Orange"
                    setting_value: "DeepOrange"

                SettingsThemeColorToggleButton:
                    text: "Brown"
                    setting_value: "Brown"

                SettingsThemeColorToggleButton:
                    text: "Gray"
                    setting_value: "Gray"

                SettingsThemeColorToggleButton:
                    text: "Blue Gray"
                    setting_value: "BlueGray"

                MDLabel:
                    text: "Theme Style:"
                    size_hint_y: None
                    size_hint_x: 1
                    size: [0, 20]

                SettingsThemeStyleToggleButton:
                    text: "Light"
                    setting_value: "Light"

                SettingsThemeStyleToggleButton:
                    text: "Dark"
                    setting_value: "Dark"

                MDSeparator:

                MDLabel:
                    text: "Language:"
                    size_hint_y: None
                    size_hint_x: 1
                    size: [0, 20]

                SettingsLangToggleButton:
                    text: "En"
                    setting_value: "en"

                SettingsLangToggleButton:
                    text: "Ru"
                    setting_value: "ru"

                MDSeparator:

                MDLabel:
                    text: "Homework Reminder:"
                    size_hint_y: None
                    size_hint_x: 1
                    size: [0, 20]

                MDFillRoundFlatButton:
                    id: notify_select
                    text: ""
                    on_release: app.set_notify_time_setting(self.text)

                MDSeparator:

                MDLabel:
                    text: "Generate Demo Schedule:"
                    size_hint_y: None
                    size_hint_x: 1
                    size: [0, 20]

                MDFillRoundFlatButton:
                    id: create_demo_btn
                    text: "Create Demo"
                    on_release: app.generate_demo_schedule()

    Screen:
        name: "schedule"
        MDBoxLayout:
            id: schedule_screen_layout
            orientation: 'vertical'
            MDToolbar:
                id: schedule_toolbar
                title: "Schedule"
                elevation: 8
                md_bg_color: app.theme_cls.primary_color
                left_action_items: [['arrow-left', lambda x: app.go_back()]]

            MDTabs:
                id: schedule_tabs
                on_tab_switch: app.on_schedule_tab_switch(*args)
                tab_indicator_anim: True
                tab_indicator_height: "4dp"
                elevation: 8

                Tab:
                    id: tab_0
                    text: "Tab 0"
                    ScheduleLessonListRV:
                        id: lesson_list_day_0

                Tab:
                    id: tab_1
                    text: "Tab 1"
                    ScheduleLessonListRV:
                        id: lesson_list_day_1
                Tab:
                    id: tab_2
                    text: "Tab 2"
                    ScheduleLessonListRV:
                        id: lesson_list_day_2
                Tab:
                    id: tab_3
                    text: "Tab 3"
                    ScheduleLessonListRV:
                        id: lesson_list_day_3
                Tab:
                    id: tab_4
                    text: "Tab 4"
                    ScheduleLessonListRV:
                        id: lesson_list_day_4
                Tab:
                    id: tab_5
                    text: "Tab 5"
                    ScheduleLessonListRV:
                        id: lesson_list_day_5
                Tab:
                    id: tab_6
                    text: "Tab 6"
                    ScheduleLessonListRV:
                        id: lesson_list_day_6


            MDBottomAppBar:
                MDToolbar:
                    id: bottom_schedule_toolbar
                    type: 'bottom'
                    title: 'Week'
                    mode: 'free-end'
                    icon: 'plus'
                    icon_color: app.theme_cls.accent_color
                    on_action_button: app.add_lesson()
                    right_action_items: [['page-previous', lambda x: app.week_back()], ['calendar-today', lambda x: app.week_current()], ['page-next', lambda x: app.week_next()]]

    Screen:
        name: "add_lesson_homework"
        BoxLayout:
            id: add_lesson_homework_layout
            orientation: 'vertical'
            MDToolbar:
                id: add_lesson_homework_top_toolbar
                title: "Add Homework"
                md_bg_color: app.theme_cls.primary_color
                elevation: 8
            ScrollView:
                do_scroll_x: False
                GridLayout:
                    padding: dp(30)
                    spacing: dp(20)
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

                    MDLabel:
                        id: add_lesson_homework_subtitle
                        font_style: 'Subtitle1'
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.accent_color

                    TitleTextField:
                        id: add_lesson_homework_desc_text
                        hint_text: 'Describe your Homework'
                        text_max: app.get_config_item('homework_desc_max_len')
                        fill_color: 0, 0, 0, .1
                        mode: 'fill'
                        helper_text_mode: "on_focus"
                        helper_text: f'maximum {app.get_config_item("homework_desc_max_len")} chars length'
                    GridLayout:
                        cols: 2

                        MDLabel:
                            font_style: 'Subtitle1'
                            theme_text_color: 'Custom'
                            text_color: app.theme_cls.primary_color
                            text: "Enable reminder"
                            size_hint_x: 0.8

                        MDSwitch:
                            id: add_lesson_homework_notifiable
                            active: True


<SettingsThemeColorToggleButton>:
    group: "theme_color"
    background_down: app.theme_cls.primary_light
    background_normal: app.theme_cls.primary_color
    on_release: app.change_theme_color(root)
    allow_no_selection: False
    font_name: app.get_app_font()

<SettingsThemeStyleToggleButton>:
    group: "theme_style"
    background_down: app.theme_cls.primary_light
    background_normal: app.theme_cls.primary_color
    on_release: app.change_theme_style(root)
    allow_no_selection: False
    font_name: app.get_app_font()

<SettingsLangToggleButton>:
    group: "lang"
    background_down: app.theme_cls.primary_light
    background_normal: app.theme_cls.primary_color
    on_release: app.change_lang(root)
    allow_no_selection: False
    font_name: app.get_app_font()
